@model ArticoliViewModel
@{
	ViewData["Title"] = "Articoli";
}
<div class="container">
    <h1 class="text-center text-info mt-3">Articoli</h1>
    <div class="text-end mb-3">
        <a class="btn btn-sm bg-success text-white" asp-controller="Articoli" asp-action="Add"><i class="bi bi-plus"></i> Nuovo articolo</a>
    </div>
    <div class="row">
        @foreach (var articolo in Model.Articoli)
        {
        <div class="col-4">
        <div class="card">
            <img src=@articolo.Copertina class="img-fluid rounded-start rounded-end" alt="scarpa" />
            <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-5">
                        <a asp-controller="Articoli" asp-action="Info" asp-route-id="@articolo.Id" class="me-4 text-decoration-none"><i class="bi bi-info-circle"></i> Info</a>
                        <a asp-controller="Articoli" asp-action="Modifica" asp-route-id="@articolo.Id"><i class="bi bi-pencil-square h4"></i></a>
                    </div>
                <h5 class="card-title text-center">@articolo.Nome</h5>
                    <p class="card-text text-center">€ @articolo.Prezzo</p>
                    <form method="post" asp-controller="Articoli" asp-action="Elimina" asp-route-id="@articolo.Id" class="mt-2 text-end" onsubmit="return confirm('Sei sicuro di voler eliminare questo prodotto?');">
                        <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                    </form>
            </div>
        </div>
        </div>
            
        }
    </div>
</div>
   